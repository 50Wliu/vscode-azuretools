{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "lib",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "declaration": true,
        "rootDir": "src",
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "strictNullChecks": false, // TODO: Fix issues in copied code and turn back on
        "noUnusedParameters": true
    },
    "exclude": [
        "node_modules",
        "lib"
    ]
}